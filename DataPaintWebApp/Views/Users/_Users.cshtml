@using DataPaintLibrary.Services.Classes
@model List<User>;

<h1>Data Paint Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Username</th>
            <th>FirstName</th>
            <th>Surname</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="5">No users found.</td>
            </tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td>@user.FirstName</td>
                    <td>@user.Surname</td>
                    <td>@user.Email</td>
                </tr>
            }
        }
    </tbody>
</table>