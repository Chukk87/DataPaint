@model List<SecurityGroup>

<h1>Manage Security Groups</h1>

<div class="row">
    <!-- Select Security Group -->
    <div class="col-md-6">
        <label for="securityGroupSelect">Select Security Group:</label>
        <select id="securityGroupSelect" class="form-control">
            <option value="">--Select a Group--</option>
            @foreach (var group in Model)
            {
                <option value="@group.Id">@group.GroupName</option>
            }
        </select>
    </div>

    <!-- Visible to All Checkbox -->
    <div class="col-md-6">
        <label>
            <input type="checkbox" id="visibleToAll" /> Visible to All
        </label>
    </div>
</div>

