<Window x:Class="DataPaintApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataPaintApp"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="300" Background="#3AA9C9">
    <Border Background="#3AA9AD" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="Black" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="Black"/>
            <TextBox Name="UsernameTextBox" Background="White"/>
            <Label Content="Password" Foreground="Black"/>
            <TextBox Name="PasswordTextBox" Background="White"/>

        </StackPanel>
    </Border>
</Window>
